<%= render "month_selector",
            current_month: current_month,
            prev_month: prev_month, 
            next_month: next_month,
            controller: controller_name %>

<div class="chart"
     data-controller="chart"
     data-chart-title-value="<%= t("charts.monthly_expenses") %>"
     data-chart-i18n-value="<%= in_json(title: t("charts.monthly_expenses"),  backText: t("back")) %>"
     data-chart-current-month-value="<%= current_month %>"
     >
  <p class="text-center">
     <%= t(".empty_expenses_data", raise: true) %>
  </p>
</div>
