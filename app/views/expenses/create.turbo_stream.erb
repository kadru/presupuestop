<%# locals: (expense:, new_expense:, categories:, subcategories:) %>
<%= turbo_stream.prepend "expenses_tbody",
                         partial: "expenses/expense",
                         locals: { expense: expense } %>
<%= turbo_stream.replace new_expense do %>
  <%= turbo_frame_tag new_expense do %>
    <%= render "expenses/form",
               expense: new_expense,
               categories: categories,
               subcategories: subcategories %>
  <% end %>
<% end %>
