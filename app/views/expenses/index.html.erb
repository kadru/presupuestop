<%# locals: (expenses:,
             new_expense:,
             categories:,
             subcategories:,
             current_month:,
             prev_month:
             next_month) %>

<%= render "month_selector",
            current_month: current_month,
            prev_month: prev_month,
            next_month: next_month,
            controller: controller_name %>

<div class="scrollable-table">
  <table class="pure-table pure-table-horizontal pure-table-striped compact-table scrollable">
    <thead>
      <tr>
        <th><%= t(".name") %></th>
        <th><%= t(".amount") %></th>
        <th><%= t(".category") %></th>
        <th><%= t(".actions") %></th>
      </tr>
    </thead>
    <tbody id="expenses_tbody" is="turbo-frame">
      <%= render expenses %>
    </tbody>
  </table>
</div>

<br>

<%= turbo_frame_tag :total_expense, src: total_amount_expenses_path(current_month:) %>

<br>

<%= link_to(t(".new_expense"),
            new_expense_path(current_month:),
            class: "pure-button pure-button-primary button-large",
            data: { turbo_frame: :new_expense }) %>

<dialog
  class="dialog"
  data-controller="modal"
  data-modal-target="dialog"
  data-action="turbo:frame-load->modal#open turbo:submit-end->modal#close">
  <div class="to-right">
    <button
      class="icon-button"
      data-action="modal#close">
      <span class="material-symbols-outlined to-right">
        close
      </span>
    </button>
  </div>
  <%= turbo_frame_tag :new_expense %>
</dialog>
</div>
