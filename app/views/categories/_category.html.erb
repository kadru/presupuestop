<div id="<%= dom_id(category) %>" class="pure-u-1 pure-u-md-16-24">
  <div class="card">
    <div class="card-left">
      <div>
        <%= category.name %>
      </div>
       <%= category.class.human_attribute_name(:budget) %>: <%= number_to_currency category.budget %>
    </div>
    <div class="card-right">
      <%= link_to edit_category_path(category),
                  title: t(".edit"),
                  class: "pure-button button-small"  do %>
        <span class="material-symbols-outlined">
          edit
        </span>
      <% end %>
      <br>
      <%= button_to category_path(category),
                    method: :delete,
                    title: t(".delete"),
                    class: "pure-button button-small" do %>
        <span class="material-symbols-outlined">
          delete
        </span>
      <% end %>
    </div>
  </div>
</div>
